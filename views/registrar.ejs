<%-include('./partials/head.ejs') %>
    <%-include('./partials/header.ejs') %>

        <div class="container-fluid d-flex justify-content-center contenedorPrincipal">
            <div class="container contenedorSecundario registrar">
                <h3 class="text-center">Registrarse</h3>
                <div class="card-body text-center">
                    <!-- <img class="card-img-top w-25" src="/img/userRegistro.png" alt="user"> -->
                    
                    <form action="registrar" method="post">
                        <div class="my-3">
                            <label for="user">Usuario</label>
                            <input class="user" name="user" id="user" type="text" placeholder="Usuario" required>
                        </div>
                        <div class="my-3">
                            <label for="name">Nombre Completo</label>
                            <input class="nombre" name="name" id="name" type="text" placeholder="Nombre completo" required>
                        </div>
                        <div class="my-3">
                            <label for="rol">Rol</label>
                            <select name="rol" id="rol" class="select.css">
                                <option value="admin">Admin</option>
                                <option value="data entry">Usuario</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="pass">Contraseña</label>
                            <input class="password" name="pass" id="pass" type="password" placeholder="Contraseña" required>
                        </div>
                        <div class="btnRegistrar">
                            <a href="/" class="btn btnCancelar">Cancelar</a>
                            <input class="btn btnGuardar" type="submit" value="Guardar">
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <% if (typeof alert !="undefined" ) { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmButton: '<%= showConfirmButton %>',
                    timer: '<%= timer %>'
                }).then(() => {
                    window.location = '/<%= ruta %>'
                })
            </script>
            <% } %>

            <script src="/js/main.js"></script>